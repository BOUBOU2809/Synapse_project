{% extends 'base.html.twig' %}

{% block title %}Import d'une session à partir de Psyché{% endblock %}

{% block body %}
    {{ include('psyche/nav.html.twig') }}
    <div class="overflow-hidden" id="size_img">
        <img src="{{ asset('images/pilot.jpg') }}" alt="Photo de pilotes" class="w-100"/>
    </div>
    <div>
        <div class="pt-4 px-5">
            <div class="progress">
                <div class="progress-bar bg-dark" role="progressbar" style="width:33%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <p class="px-5 pt-4 fw-bold text-lg-start">Etape 1</p>
        <h1 class="px-5">Import d'une session PSYCHE</h1>
        <p class="px-5">Entrez vos dates de début et de fin correspondant à votre session</p>

        {{ form_start(form) }}
        <div class="d-flex flex-column px-5">
            <div class="row">
                {{ form_row(form.dateD) }}
                {{ form_row(form.dateF) }}
            </div>
            {{ form_row(form.Chercher) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
